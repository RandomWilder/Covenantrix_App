{
  "name": "covenantrix",
  "version": "1.0.2",
  "description": "Contract Intelligence Platform - Proof of Concept",
  "main": "main.js",
  "homepage": "https://github.com/RandomWilder/Covenantrix_App",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron . --enable-logging",
    "dev": "cross-env NODE_ENV=development electron . --enable-logging",
    "dev:react": "vite",
    "build:react": "tsc && vite build --outDir ../../dist-react",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "echo 'Building application...'",
    "package:win": "electron-builder --win --x64 --publish never",
    "package:mac": "electron-builder --mac --publish never",
    "package:linux": "electron-builder --linux --publish never",
    "package:all": "electron-builder --win --mac --publish never",
    "release:win": "electron-builder --win --x64 --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:linux": "electron-builder --linux --publish always",
    "release:all": "electron-builder --win --mac --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist/",
    "test-build": "npm run clean && npm run package:win"
  },
  "keywords": [
    "contract",
    "ai",
    "legal",
    "document",
    "analysis",
    "covenantrix"
  ],
  "author": {
    "name": "RandomWilder",
    "url": "https://github.com/RandomWilder"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "form-data": "^4.0.4",
    "lucide-react": "^0.295.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.randomwilder.covenantrix",
    "productName": "Covenantrix",
    "directories": {
      "output": "dist/packaged"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RandomWilder",
        "repo": "Covenantrix_App"
      }
    ],
    "extraResources": [
      {
        "from": "dist/python-dist",
        "to": "python-dist",
        "filter": "**/*"
      },
      {
        "from": "backend",
        "to": "app-backend",
        "filter": [
          "**/*",
          "!**/rag_storage/**"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "dist-react/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!backend/**/*",
      "!dist/python-dist/**/*",
      "!renderer/**/*"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RandomWilder/Covenantrix_App.git"
  },
  "bugs": {
    "url": "https://github.com/RandomWilder/Covenantrix_App/issues"
  }
}
