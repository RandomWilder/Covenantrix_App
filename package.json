{
  "name": "covenantrix",
  "version": "0.3.1",
  "description": "Contract Intelligence Platform - Proof of Concept",
  "main": "main.js",
  "homepage": "https://github.com/RandomWilder/Covenantrix_App",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron . --enable-logging",
    "build": "echo 'Building application...'",
    "package:win": "electron-builder --win --x64 --publish never",
    "package:mac": "electron-builder --mac --publish never", 
    "package:linux": "electron-builder --linux --publish never",
    "package:all": "electron-builder --win --mac --publish never",
    "release:win": "electron-builder --win --x64 --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:all": "electron-builder --win --mac --publish always",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist/",
    "test-build": "npm run clean && npm run package:win"
  },
  "keywords": [
    "contract",
    "ai", 
    "legal",
    "document",
    "analysis",
    "covenantrix"
  ],
  "author": {
    "name": "RandomWilder",
    "url": "https://github.com/RandomWilder"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.randomwilder.covenantrix",
    "productName": "Covenantrix",
    "directories": {
      "output": "dist/packaged"
    },
    "publish": {
      "provider": "github",
      "owner": "RandomWilder",
      "repo": "Covenantrix_App",
      "private": false,
      "publishAutoUpdate": true
    },
    "extraResources": [
      {
        "from": "dist/python-dist",
        "to": "python-dist",
        "filter": "**/*"
      },
      {
        "from": "backend", 
        "to": "app-backend",
        "filter": "**/*"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer/*.html",
      "renderer/*.js", 
      "renderer/*.css",
      "assets/**/*",
      "node_modules/**/*",
      "!backend/**/*",
      "!dist/python-dist/**/*"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "RandomWilder",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "dmg": {
      "icon": "assets/icon.icns",
      "title": "Covenantrix Installer"
    }
  },
  "repository": {
    "type": "git", 
    "url": "git+https://github.com/RandomWilder/Covenantrix_App.git"
  },
  "bugs": {
    "url": "https://github.com/RandomWilder/Covenantrix_App/issues"
  }
}